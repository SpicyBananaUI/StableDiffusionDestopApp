<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="myApp.RemoteAddressDialog"
        Title="RemoteAddressDialog">
        
        <StackPanel Margin="12" Spacing="10">
                <TextBlock Text="Enter server address:" FontSize="14"/>
                <TextBox x:Name="AddressBox" Text="http://127.0.0.1:7861"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                        <Button Content="Cancel" Click="Cancel_Click"/>
                        <Button Content="OK" Click="Ok_Click"/>
                </StackPanel>
        </StackPanel>
        
</Window>
