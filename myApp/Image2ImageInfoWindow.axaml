<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="myApp.Image2ImageWindow"
        Title="Intro"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner">
    <Grid Background="#222">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock x:Name="TitleText" Text="Image2Image" 
                   Foreground="LightGreen" FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="10"/>

        <!-- Slide Content -->
        <Border Grid.Row="1" Margin="10" Background="Transparent" CornerRadius="8">
            <Grid>
                <Grid x:Name="Slide1" IsVisible="True">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Assets/pic1.jpg" Width="300" Height="200" 
                               Margin="0,0,0,20" Stretch="Uniform"/>
                        <TextBlock Text="Understanding the Concept" Foreground="LightGreen" 
                                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Image-to-Image generation allows you to use an existing image as a starting point to create a new version of it. The most critical parameter here is Denoising Strength: A low value (0.2-0.4) tells the AI to make only subtle changes, a high value (0.7-1.0) gives the AI more freedom to transforming the image based on your prompt."
                                   TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"
                                   Margin="20" Foreground="White" MaxWidth="500"/>
                    </StackPanel>
                </Grid>

                <Grid x:Name="Slide2" IsVisible="False">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Assets/pic2.jpg" Width="300" Height="200" 
                               Margin="0,0,0,20" Stretch="Uniform"/>
                        <TextBlock Text="Crafting Your Prompt" Foreground="LightGreen" 
                                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text='The prompt needs to work with the input image. Instead of starting from scratch, describe the changes you want to see. For example, "a photograph of a woman, same pose and background, but with red hair and a Victorian-era dress." Use negative prompts like "deformed, blurry, bad anatomy" to prevent common AI artifacts and maintain the quality of your original.'
                                   TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"
                                   Margin="20" Foreground="White" MaxWidth="500"/>
                    </StackPanel>
                </Grid>

                <Grid x:Name="Slide3" IsVisible="False">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Assets/pic3.jpg" Width="300" Height="200" 
                               Margin="0,0,0,20" Stretch="Uniform"/>
                        <TextBlock Text="Practical Use Cases" Foreground="LightGreen" 
                                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="For Style Transfer, use a medium Denoising Strength (0.5-0.7) to allow the new style to overlay the original forms. For Quality Enhancement like sharpening a blurry image, use a low Denoising Strength (0.2-0.4) to avoid altering the content. For Creative Re-imagining, use a high Denoising Strength (0.6-0.8) and a strong, descriptive prompt."
                                   TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"
                                   Margin="20" Foreground="White" MaxWidth="500"/>
                    </StackPanel>
                </Grid>
                
            </Grid>
        </Border>

        <!-- Navigation -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="PrevButton" Content="Previous" Width="80" Margin="0,0,10,0"
                    Background="#444" Foreground="White" Click="PrevButton_Click" IsEnabled="False"/>
            <Button x:Name="NextButton" Content="Next" Width="80" 
                    Background="#444" Foreground="White" Click="NextButton_Click"/>
        </StackPanel>
    </Grid>
</Window>