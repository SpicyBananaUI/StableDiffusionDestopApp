<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="myApp.ModelsView">
    
    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <StackPanel Orientation="Horizontal" Margin="10" Spacing="10">
            <TextBlock Text="Models &amp; Plugins" FontSize="22" FontWeight="Bold"/>
            <!-- <ComboBox Width="150" SelectedIndex="0">
                <ComboBoxItem Content="Browse Models"/>
                <ComboBoxItem Content="Browse Plugins"/>
                <ComboBoxItem Content="Installed"/>
            </ComboBox>
            <TextBox Width="200" Watermark="Search..." /> -->
        </StackPanel>

        <!-- Content Area -->
        <TabControl Grid.Row="1">
            
            <!-- Browse Models -->
            <TabItem Header="Browse Models">
                <ScrollViewer>
                    <StackPanel Margin="10" Spacing="10">
                        <WrapPanel x:Name="ModelsWrapPanel"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBox x:Name="ModelUrlTextBox" Width="300" Watermark="Enter model URL..." />
                            <TextBox x:Name="ChecksumTextBox" Width="200" Watermark="Enter checksum (optional)..." />
                            <Button x:Name="DownloadModelButton" Content="Download Model" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,5,0,0" VerticalAlignment="Center">
                            <ProgressBar x:Name="ModelDownloadProgress" Height="10" Width="150" IsVisible="False" IsIndeterminate="True"/>
                            <TextBlock x:Name="ModelDownloadStatus" Text=""/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>


            <!-- Browse Plugins -->
            <!-- <TabItem Header="Browse Plugins">
                <ScrollViewer>
                    <StackPanel Margin="10" Spacing="10">
                        <Border Background="#2d2d2d" CornerRadius="10" Padding="10">
                            <StackPanel>
                                <TextBlock Text="ControlNet" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="Adds image guidance for poses, edges, etc." FontSize="12" TextWrapping="Wrap"/>
                                <ProgressBar Minimum="0" Maximum="100" Value="0" Height="10" Margin="0,5"/>
                                <Button Content="Install" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem> -->

            <!-- Installed -->
            <TabItem Header="Installed Models">
                <StackPanel Margin="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="InstalledModelsList" Margin="10" />
                    </ScrollViewer>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                        <Button Name="RefreshModelsButton" Content="Refresh" Width="100"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>


            <!-- Built-in Plugins -->
            <TabItem Header="Built-in Plugins">
                <ScrollViewer>
                    <StackPanel Margin="10" Spacing="10">
                        <TextBlock Text="Backend-safe extensions" FontWeight="Bold"/>
                        <StackPanel x:Name="BackendSafeExtensionsPanel" Spacing="4"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button x:Name="ToggleSelectBackendSafeButton" Content="Deselect All"/>
                            <Button x:Name="ApplySelectedBackendSafeButton" Content="Enable Selected"/>
                        </StackPanel>

                        <Separator/>

                        <TextBlock Text="Unsafe extensions (Gradio UI/JS required for full functionality)" FontWeight="Bold"/>
                        <StackPanel x:Name="UnsafeExtensionsPanel" Spacing="4"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button x:Name="DeselectUnsafeButton" Content="Deselect All"/>
                            <Button x:Name="ApplySelectedUnsafeButton" Content="Enable Selected"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
    
</UserControl>
