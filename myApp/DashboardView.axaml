<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="500"
             x:Class="myApp.DashboardView">

    <DockPanel Margin="10">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Hidden" Margin="0,0,10,0">
                <StackPanel Spacing="15">

                    <!-- PROMPT SECTION -->
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="5">
                        <StackPanel Spacing="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Prompt &amp; Negative Prompt" FontWeight="Bold"/>
                                <Button Grid.Column="1"
                                        Content="?"
                                        Width="25"
                                        Height="25"
                                        Padding="0"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        VerticalAlignment="Center"
                                        Click="ShowPromptTips"/>

                            </Grid>

                            <TextBox x:Name="PromptTextBox"
                                     Watermark="Enter prompt..."
                                     Background="#333"
                                     Foreground="White"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="60"
                                     MaxHeight="250"
                                     VerticalAlignment="Top"/>

                            <TextBox x:Name="NegativePromptTextBox"
                                     Watermark="Enter negative prompt..."
                                     Background="#333"
                                     Foreground="White"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="60"
                                     MaxHeight="250"
                                     VerticalAlignment="Top"/>

                            
                            <Button x:Name="EnhancePromptButton" Content="Enhance Prompt with AI" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- GENERATION SETTINGS -->
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="5">
                        <StackPanel Spacing="10">
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Generation Settings" FontWeight="Bold"/>
                                <Button Grid.Column="1"
                                        Content="?"
                                        Width="25"
                                        Height="25"
                                        Padding="0"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        VerticalAlignment="Center"
                                        Click="ShowControlTips"/>

                            </Grid>
                            
                            <!-- Mode -->
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="Mode:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="ModeComboBox" Width="150" SelectedIndex="0">
                                    <ComboBoxItem Content="Text to Image"/>
                                    <ComboBoxItem Content="Image to Image"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- STEPS -->
                            <Grid Margin="0,6" ColumnDefinitions="90,*,50">
                                <TextBlock Text="Steps:" VerticalAlignment="Center" Foreground="White"/>
                                <Slider x:Name="StepsSlider"
                                        Grid.Column="1"
                                        Minimum="1"
                                        Maximum="150"
                                        Value="20"
                                        Height="32"
                                        Margin="8,0"/>
                                <TextBlock x:Name="StepsValueText"
                                           Grid.Column="2"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Foreground="White"
                                           Text="20"/>
                            </Grid>

                            <!-- SCALE -->
                            <Grid Margin="0,6" ColumnDefinitions="90,*,50">
                                <TextBlock Text="Scale:" VerticalAlignment="Center" Foreground="White"/>
                                <Slider x:Name="ScaleSlider"
                                        Grid.Column="1"
                                        Minimum="1"
                                        Maximum="30"
                                        Value="7.5"
                                        Height="32"
                                        Margin="8,0"/>
                                <TextBlock x:Name="ScaleValueText"
                                           Grid.Column="2"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Foreground="White"
                                           Text="7.5"/>
                            </Grid>

                            <!-- BATCH -->
                            <Grid Margin="0,6" ColumnDefinitions="90,*,50">
                                <TextBlock Text="# Images:" VerticalAlignment="Center" Foreground="White"/>
                                <Slider x:Name="BatchSlider"
                                        Grid.Column="1"
                                        Minimum="1"
                                        Maximum="8"
                                        Value="1"
                                        Height="32"
                                        Margin="8,0"/>
                                <TextBlock x:Name="BatchValueText"
                                           Grid.Column="2"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Foreground="White"
                                           Text="1"/>
                            </Grid>

                        </StackPanel>
                    </Border>

                    <!-- IMAGE2IMAGE SECTION -->
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="5" x:Name="Image2ImagePanel" IsVisible="False">
                        <StackPanel Spacing="5">
                           
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Image2Image Settings" FontWeight="Bold"/>
                                <Button Grid.Column="1"
                                        Content="?"
                                        Width="25"
                                        Height="25"
                                        Padding="0"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        VerticalAlignment="Center"
                                        Click="ShowImage2ImageTips"/>

                            </Grid>
                            
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Button x:Name="LoadInitImageButton" Content="Load Initial Image"/>
                                <Button x:Name="UseCurrentImageButton" Content="Use Current Image" IsEnabled="False"/>
                                <Image x:Name="InitImagePreview" Width="80" Height="80" Stretch="Uniform"/>
                            </StackPanel>

                            <Grid Margin="0,6" ColumnDefinitions="90,*,50">
                                <TextBlock Text="Strength:" VerticalAlignment="Center" Foreground="White"/>

                                <Slider x:Name="StrengthSlider"
                                        Grid.Column="1"
                                        Minimum="0"
                                        Maximum="1"
                                        Value="0.75"
                                        Height="32"
                                        Margin="8,0" />

                                <TextBlock x:Name="StrengthValueText"
                                           Grid.Column="2"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Foreground="White"
                                           Text="0.75" />
                            </Grid>

                        </StackPanel>
                    </Border>

                    <!-- ADVANCED -->
                    <Expander Header="Advanced Options" Background="#1a1a1a" CornerRadius="5" Padding="10" BorderBrush="#333" BorderThickness="1">
                        <StackPanel Spacing="10">
                            <CheckBox x:Name="EnableHrCheckbox" Content="Enable Highres Fix"/>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="Upscaler:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="HrUpscalerComboBox" Width="180"/>
                                <TextBlock Text="Scale:" VerticalAlignment="Center"/>
                                <TextBox x:Name="HrScaleTextBox" Width="60" Watermark="1.5"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- CONFIGURATION -->
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="5">
                        <StackPanel Spacing="5">
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Configuration" FontWeight="Bold"/>
                                <Button Grid.Column="1"
                                        Content="?"
                                        Width="25"
                                        Height="25"
                                        Padding="0"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        VerticalAlignment="Center"
                                        Click="ShowConfigurationTips"/>

                            </Grid>
                            
                            <ComboBox x:Name="ModelComboBox" PlaceholderText="Choose Model"/>
                            <ComboBox x:Name="SamplerComboBox" PlaceholderText="Choose Sampler"/>

                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <TextBox x:Name="WidthTextBox" Width="60" Watermark="Width"/>
                                <TextBox x:Name="HeightTextBox" Width="60" Watermark="Height"/>
                                <TextBox x:Name="SeedTextBox" Width="100" Watermark="Seed"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- GENERATE & SAVE -->
                    <StackPanel Spacing="5">
                        <Button x:Name="GenerateButton" Content="Generate" Background="DarkGray" Foreground="White"/>
                        <Button x:Name="SaveButton" Content="Save" Background="DarkGray" Foreground="White" IsEnabled="False"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

            <!-- RIGHT PANEL -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="10">
                <Grid Background="#111">
                    <Image x:Name="ResultImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <StackPanel x:Name="ProgressOverlay" HorizontalAlignment="Center" VerticalAlignment="Center" IsVisible="False">
                        <ProgressBar x:Name="LoadingBar" Minimum="0" Maximum="100" Height="20"/>
                        <TextBlock x:Name="ProgressText" Text="" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel x:Name="ImageNavPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,60,0,10" Spacing="10" IsVisible="False">
                        <Button x:Name="PrevImageButton" Content="←" Width="30"/>
                        <TextBlock x:Name="ImageIndexLabel" Text="Image 1 of 1" Foreground="LightGreen" VerticalAlignment="Center" FontWeight="Bold"/>
                        <Button x:Name="NextImageButton" Content="→" Width="30"/>
                    </StackPanel>

                    <TextBlock x:Name="StatusText" Text="No image generated yet" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,10"/>
                </Grid>
            </Border>

        </Grid>
    </DockPanel>
</UserControl>
