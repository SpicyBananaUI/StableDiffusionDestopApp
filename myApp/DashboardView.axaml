<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="myApp.DashboardView"
             d:DesignWidth="1200"
             d:DesignHeight="700">

    <DockPanel Background="#111">

        <Grid Margin="20" ColumnDefinitions="2*,3*" RowDefinitions="*">
            <!-- LEFT SIDE -->
            <ScrollViewer Grid.Column="0"
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Spacing="15" Margin="0,0,20,0">

                    <!-- PROMPT INPUT -->
                    <Border CornerRadius="10"
                            Padding="15"
                            Background="#1c1c1c"
                            BorderBrush="#333"
                            BorderThickness="1">
                        <StackPanel Spacing="8">
                            <Grid ColumnDefinitions="*,Auto,Auto">
                                <TextBlock Text="Prompt"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           Foreground="White"/>

                                <Button Grid.Column="1"
                                        Name="EnhancePromptButton"
                                        Content="Enhance Prompt with AI"
                                        Width="180"
                                        Margin="10,0,0,0"/>

                                <Button Grid.Column="2"
                                        Width="30"
                                        Height="30"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalAlignment="Center"
                                        Click="ShowPromptTips">
                                    <TextBlock Text="?" Foreground="LightGray" FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Button>
                            </Grid>

                            <TextBox x:Name="PromptTextBox"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="60"
                                     MaxHeight="300"
                                     Background="#2b2b2b"
                                     Foreground="White"
                                     CornerRadius="6"
                                     Padding="8"
                                     Watermark="Enter prompt..."
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Top"/>

                            <TextBox x:Name="NegativePromptTextBox"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="60"
                                     MaxHeight="300"
                                     Background="#2b2b2b"
                                     Foreground="White"
                                     CornerRadius="6"
                                     Padding="8"
                                     Watermark="Enter negative prompt..."
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Top"/>

                        </StackPanel>
                    </Border>

                    <!-- CONTROLS -->
                    <Border Background="#1c1c1c"
                            CornerRadius="10"
                            Padding="15"
                            BorderBrush="#333"
                            BorderThickness="1">
                        <StackPanel Spacing="10">
                            <DockPanel LastChildFill="False" VerticalAlignment="Center">
                                <TextBlock Text="Controls"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           DockPanel.Dock="Left"/>

                                <Button Width="30"
                                        Height="30"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        DockPanel.Dock="Right"
                                        VerticalAlignment="Center"
                                        Click="ShowControlTips">
                                    <TextBlock Text="?"
                                               Foreground="LightGray"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Button>
                            </DockPanel>


                            <!-- Mode Toggle -->
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="Mode:" VerticalAlignment="Center" Foreground="#ddd"/>
                                <ComboBox x:Name="ModeComboBox" Width="180" SelectedIndex="0">
                                    <ComboBoxItem Content="Text to Image"/>
                                    <ComboBoxItem Content="Image to Image"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Sliders -->
                            <StackPanel Spacing="6">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <TextBlock Text="Steps:" Foreground="#ddd" VerticalAlignment="Center"/>
                                    <Slider x:Name="StepsSlider" Minimum="1" Maximum="150" Value="20" VerticalAlignment="Top" Grid.Column="1" Height="48"/>
                                    <TextBlock x:Name="StepsValueText" Text="20" Foreground="#ccc" VerticalAlignment="Center" Grid.Column="2" Margin="10,0,0,0"/>
                                </Grid>

                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <TextBlock Text="Scale:" Foreground="#ddd" VerticalAlignment="Center"/>
                                    <Slider x:Name="ScaleSlider" Minimum="1" Maximum="30" Value="7.5" VerticalAlignment="Top" Grid.Column="1" Height="48"/>
                                    <TextBlock x:Name="ScaleValueText" Text="7.5" Foreground="#ccc" VerticalAlignment="Center" Grid.Column="2" Margin="10,0,0,0"/>
                                </Grid>

                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <TextBlock Text="# of Images:" Foreground="#ddd" VerticalAlignment="Center"/>
                                    <Slider x:Name="BatchSlider" Minimum="1" Maximum="8" Value="1" VerticalAlignment="Top" Grid.Column="1" Height="48"/>
                                    <TextBlock x:Name="BatchValueText" Text="1" Foreground="#ccc" VerticalAlignment="Center" Grid.Column="2" Margin="10,0,0,0"/>
                                </Grid>
                            </StackPanel>

                            <!-- Image2Image Section -->
                            <StackPanel x:Name="Image2ImageControls" IsVisible="False" Spacing="8">
                                    <Grid ColumnDefinitions="*,Auto,Auto">
                                        <TextBlock Text="Image2Image Settings"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   Foreground="White"/>

                                        <Button Grid.Column="1"
                                                Width="30"
                                                Height="30"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                VerticalAlignment="Center"
                                                Click="ShowImage2ImageTips">
                                            <TextBlock Text="?" Foreground="LightGray" FontWeight="Bold"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                        </Button>
                                    </Grid>
                                
                                
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Button x:Name="LoadInitImageButton" Content="Load Initial Image"/>
                                    <Button x:Name="UseCurrentImageButton" Content="Use Current Image" IsEnabled="False"/>
                                    <Image x:Name="InitImagePreview" Width="100" Height="100" Stretch="Uniform"/>
                                </StackPanel>
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <TextBlock Text="Strength:" Foreground="#ddd" VerticalAlignment="Center"/>
                                    <Slider x:Name="StrengthSlider" Minimum="0" Maximum="1" Value="0.75" VerticalAlignment="Top" Grid.Column="1" Height="48"/>
                                    <TextBlock x:Name="StrengthValueText" Text="0.75" Foreground="#ccc" VerticalAlignment="Center" Grid.Column="2" Margin="10,0,0,0"/>
                                </Grid>
                            </StackPanel>

                            <!-- Advanced Controls Toggle -->
                            <CheckBox x:Name="ShowAdvancedCheckbox" Content="Show Advanced Controls" Margin="0,5,0,0"/>

                            <StackPanel IsVisible="{Binding #ShowAdvancedCheckbox.IsChecked}" Spacing="10">
                                <!-- Hires Fix -->
                                <Expander Header="Hires Fix"
                                      Background="#1a1a1a"
                                      Padding="10"
                                      BorderBrush="#333"
                                      BorderThickness="1">
                                <StackPanel Spacing="10">
                                    <TextBlock Text="Highres Fix" FontWeight="Bold" Foreground="White"/>
                                    <CheckBox x:Name="EnableHrCheckbox" Content="Enable Highres Fix"/>
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <TextBlock Text="Upscaler:" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <ComboBox x:Name="HrUpscalerComboBox" Width="150"/>
                                        <TextBlock Text="Scale:" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <TextBox x:Name="HrScaleTextBox" Width="60" Watermark="1.5"/>
                                    </StackPanel>
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <TextBlock Text="Denoising:" Foreground="#ddd" VerticalAlignment="Center"/>
                                        <Slider x:Name="HrDenoisingSlider" Minimum="0" Maximum="1" Value="0.35" VerticalAlignment="Top" Grid.Column="1" Height="48"/>
                                        <TextBlock x:Name="HrDenoisingValueText" Text="0.35" Foreground="#ccc" VerticalAlignment="Center" Grid.Column="2" Margin="10,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Expander>

                            <!-- FreeU -->
                            <Expander Header="FreeU"
                                      Background="#1a1a1a"
                                      Padding="10"
                                      BorderBrush="#333"
                                      BorderThickness="1">
                                <StackPanel Spacing="10">
                                    <CheckBox x:Name="FreeUEnabledCheckbox" Content="Enable FreeU"/>
                                    
                                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                                        <TextBlock Text="B1:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <Slider x:Name="FreeUB1Slider" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="2" Value="1.01" Margin="5,0"/>
                                        <TextBlock x:Name="FreeUB1Text" Grid.Row="0" Grid.Column="2" Text="{Binding #FreeUB1Slider.Value, StringFormat={}{0:F2}}" VerticalAlignment="Center" Foreground="#ccc"/>

                                        <TextBlock Text="B2:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <Slider x:Name="FreeUB2Slider" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="2" Value="1.02" Margin="5,0"/>
                                        <TextBlock x:Name="FreeUB2Text" Grid.Row="1" Grid.Column="2" Text="{Binding #FreeUB2Slider.Value, StringFormat={}{0:F2}}" VerticalAlignment="Center" Foreground="#ccc"/>

                                        <TextBlock Text="S1:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <Slider x:Name="FreeUS1Slider" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="2" Value="0.99" Margin="5,0"/>
                                        <TextBlock x:Name="FreeUS1Text" Grid.Row="2" Grid.Column="2" Text="{Binding #FreeUS1Slider.Value, StringFormat={}{0:F2}}" VerticalAlignment="Center" Foreground="#ccc"/>

                                        <TextBlock Text="S2:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <Slider x:Name="FreeUS2Slider" Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="2" Value="0.95" Margin="5,0"/>
                                        <TextBlock x:Name="FreeUS2Text" Grid.Row="3" Grid.Column="2" Text="{Binding #FreeUS2Slider.Value, StringFormat={}{0:F2}}" VerticalAlignment="Center" Foreground="#ccc"/>

                                        <TextBlock Text="Start:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <Slider x:Name="FreeUStartSlider" Grid.Row="4" Grid.Column="1" Minimum="0" Maximum="1" Value="0.0" Margin="5,0"/>
                                        <TextBlock x:Name="FreeUStartText" Grid.Row="4" Grid.Column="2" Text="{Binding #FreeUStartSlider.Value, StringFormat={}{0:F2}}" VerticalAlignment="Center" Foreground="#ccc"/>

                                        <TextBlock Text="End:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <Slider x:Name="FreeUEndSlider" Grid.Row="5" Grid.Column="1" Minimum="0" Maximum="1" Value="1.0" Margin="5,0"/>
                                        <TextBlock x:Name="FreeUEndText" Grid.Row="5" Grid.Column="2" Text="{Binding #FreeUEndSlider.Value, StringFormat={}{0:F2}}" VerticalAlignment="Center" Foreground="#ccc"/>
                                    </Grid>
                                </StackPanel>
                            </Expander>

                            <!-- Dynamic Thresholding -->
                            <Expander Header="Dynamic Thresholding"
                                      Background="#1a1a1a"
                                      Padding="10"
                                      BorderBrush="#333"
                                      BorderThickness="1">
                                <StackPanel Spacing="10">
                                    <CheckBox x:Name="DynThresEnabledCheckbox" Content="Enable Dynamic Thresholding"/>
                                    
                                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                                        <TextBlock Text="Mimic Scale:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <Slider x:Name="DynThresMimicScaleSlider" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="30" Value="7.0" Margin="5,0"/>
                                        <TextBlock Text="{Binding #DynThresMimicScaleSlider.Value, StringFormat={}{0:F1}}" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Foreground="#ccc"/>

                                        <TextBlock Text="Threshold %:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <Slider x:Name="DynThresThresholdSlider" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="100" Value="100" Margin="5,0"/>
                                        <TextBlock Text="{Binding #DynThresThresholdSlider.Value, StringFormat={}{0:F1}}" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Foreground="#ccc"/>

                                        <TextBlock Text="Mimic Min:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <Slider x:Name="DynThresMimicScaleMinSlider" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="30" Value="0.0" Margin="5,0"/>
                                        <TextBlock Text="{Binding #DynThresMimicScaleMinSlider.Value, StringFormat={}{0:F1}}" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Foreground="#ccc"/>

                                        <TextBlock Text="CFG Min:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <Slider x:Name="DynThresCfgScaleMinSlider" Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="30" Value="0.0" Margin="5,0"/>
                                        <TextBlock Text="{Binding #DynThresCfgScaleMinSlider.Value, StringFormat={}{0:F1}}" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Foreground="#ccc"/>
                                        
                                        <TextBlock Text="Sched Val:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <Slider x:Name="DynThresSchedValSlider" Grid.Row="4" Grid.Column="1" Minimum="0" Maximum="30" Value="1.0" Margin="5,0"/>
                                        <TextBlock Text="{Binding #DynThresSchedValSlider.Value, StringFormat={}{0:F1}}" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" Foreground="#ccc"/>

                                        <TextBlock Text="Phi:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <Slider x:Name="DynThresPhiSlider" Grid.Row="5" Grid.Column="1" Minimum="0" Maximum="1" Value="1.0" Margin="5,0"/>
                                        <TextBlock Text="{Binding #DynThresPhiSlider.Value, StringFormat={}{0:F2}}" Grid.Row="5" Grid.Column="2" VerticalAlignment="Center" Foreground="#ccc"/>
                                    </Grid>
                                    
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <TextBlock Text="Mimic Mode:" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <ComboBox x:Name="DynThresMimicModeCombo" SelectedIndex="0" Width="120">
                                            <ComboBoxItem Content="Constant"/>
                                            <ComboBoxItem Content="Linear Down"/>
                                            <ComboBoxItem Content="Cosine Down"/>
                                            <ComboBoxItem Content="Half Cosine Down"/>
                                            <ComboBoxItem Content="Linear Up"/>
                                            <ComboBoxItem Content="Cosine Up"/>
                                            <ComboBoxItem Content="Half Cosine Up"/>
                                            <ComboBoxItem Content="Power Up"/>
                                            <ComboBoxItem Content="Power Down"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <TextBlock Text="CFG Mode:" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <ComboBox x:Name="DynThresCfgModeCombo" SelectedIndex="0" Width="120">
                                            <ComboBoxItem Content="Constant"/>
                                            <ComboBoxItem Content="Linear Down"/>
                                            <ComboBoxItem Content="Cosine Down"/>
                                            <ComboBoxItem Content="Half Cosine Down"/>
                                            <ComboBoxItem Content="Linear Up"/>
                                            <ComboBoxItem Content="Cosine Up"/>
                                            <ComboBoxItem Content="Half Cosine Up"/>
                                            <ComboBoxItem Content="Power Up"/>
                                            <ComboBoxItem Content="Power Down"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <TextBlock Text="Separate Channels:" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <ComboBox x:Name="DynThresSeparateFeatureChannelsCombo" SelectedIndex="0" Width="100">
                                            <ComboBoxItem Content="enable"/>
                                            <ComboBoxItem Content="disable"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <TextBlock Text="Startpoint:" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <ComboBox x:Name="DynThresScalingStartpointCombo" SelectedIndex="0" Width="100">
                                            <ComboBoxItem Content="MEAN"/>
                                            <ComboBoxItem Content="ZERO"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <TextBlock Text="Variability:" VerticalAlignment="Center" Foreground="#ddd"/>
                                        <ComboBox x:Name="DynThresVariabilityMeasureCombo" SelectedIndex="0" Width="100">
                                            <ComboBoxItem Content="AD"/>
                                            <ComboBoxItem Content="STD"/>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>
                            </Expander>

                                <!-- Extension Components Button -->
                                <Button x:Name="TranslationLayerButton" Content="View Extension Components" Background="Gray" Foreground="White" Height="35" Width="290"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- CONFIGURATION -->
                    <Border Background="#1c1c1c" CornerRadius="10" Padding="15" BorderBrush="#333" BorderThickness="1">
                        <StackPanel Spacing="10">
                            <Grid ColumnDefinitions="*,Auto,Auto">
                                <TextBlock Text="Configuration"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           Foreground="White"/>

                                <Button Grid.Column="1"
                                        Width="30"
                                        Height="30"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalAlignment="Center"
                                        Click="ShowConfigurationTips">
                                    <TextBlock Text="?" Foreground="LightGray" FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Button>
                            </Grid>

                            <ComboBox x:Name="ModelComboBox" PlaceholderText="Choose Model" Width="290"/>
                            <ComboBox x:Name="SamplerComboBox" PlaceholderText="Choose Sampler" Width="290"/>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBox x:Name="WidthTextBox" Width="70" Watermark="Width"/>
                                <TextBox x:Name="HeightTextBox" Width="70" Watermark="Height"/>
                                <TextBox x:Name="SeedTextBox" Width="130" Watermark="Seed" ToolTip.Tip="Leave blank or -1 for random seed"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- ACTION BUTTONS -->
                    <Border Background="#1c1c1c" CornerRadius="10" Padding="15" BorderBrush="#333" BorderThickness="1">
                        <StackPanel Spacing="8">
                            <Button x:Name="GenerateButton" Content="Generate" Background="#00A2A8" Foreground="White" FontWeight="Bold" Height="35" Width="290"/>
                            <Button x:Name="SaveButton" Content="Save" Background="Gray" Foreground="White" IsEnabled="False" Height="35" Width="290"/>
                        </StackPanel>
                    </Border>

                    <Expander Header="Last Generation Info" Background="#1a1a1a" CornerRadius="6" Padding="10" BorderBrush="#333" BorderThickness="1">
                        <StackPanel Spacing="5">
                            <TextBlock x:Name="InfoPromptText" FontSize="12" Foreground="#ccc"/>
                            <TextBlock x:Name="InfoNegativePromptText" FontSize="12" Foreground="#ccc"/>
                            <TextBlock x:Name="InfoStepsText" FontSize="12" Foreground="#ccc"/>
                            <TextBlock x:Name="InfoSamplerText" FontSize="12" Foreground="#ccc"/>
                            <TextBlock x:Name="InfoSeedText" FontSize="12" Foreground="#ccc"/>
                            <TextBlock x:Name="InfoSizeText" FontSize="12" Foreground="#ccc"/>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>

            <!-- RIGHT SIDE (IMAGE PREVIEW) -->
            <Border Grid.Column="1"
                    Background="#111"
                    CornerRadius="10"
                    BorderBrush="#333"
                    BorderThickness="1"
                    Padding="10">
                <Grid>
                    <Image x:Name="ResultImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <StackPanel x:Name="ProgressOverlay" IsVisible="False" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                        <ProgressBar x:Name="LoadingBar" Minimum="0" Maximum="100" Height="20"/>
                        <TextBlock x:Name="ProgressText" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel x:Name="ImageNavPanel"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Spacing="10"
                                Margin="0,0,0,10"
                                IsVisible="False">
                        <Button x:Name="PrevImageButton" Content="←" Width="35"/>
                        <TextBlock x:Name="ImageIndexLabel" Foreground="#39FF14" FontWeight="Bold"/>
                        <Button x:Name="NextImageButton" Content="→" Width="35"/>
                    </StackPanel>

                    <TextBlock x:Name="StatusText"
                               Text="No image generated yet"
                               Foreground="#777"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="0,10,0,10"/>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
