<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="myApp.DashboardView">
    
    <DockPanel>

        <!-- Main Content Grid -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Prompt Inputs -->
            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
                
                <Grid Margin="0,0,0,5">
                    <TextBlock Text="Prompt &amp; Negative Prompt" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" HorizontalAlignment="Right" Background="Transparent" 
                            BorderThickness="0" Width="25" Height="30" Margin="0,0,5,0"
                            Click="ShowPromptTips">
                        <Button.Content>
                            <TextBlock Text="?" Foreground="LightGray" FontWeight="Bold"/>
                        </Button.Content>
                    </Button>
                </Grid>
                
                <TextBox x:Name="PromptTextBox" Watermark="Enter prompt..." Background="#333" Foreground="White"/>
                <TextBox x:Name="NegativePromptTextBox" Watermark="Enter negative prompt..." Background="#333" Foreground="White" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Controls Section -->
            <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="10">
                    <!-- Controls -->
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Controls" FontWeight="Bold"/>
                            <Button Grid.Column="1" HorizontalAlignment="Right" Background="Transparent" 
                                    BorderThickness="0" Width="25" Height="30" Margin="0,0,5,0"
                                    Click="ShowControlTips">
                                <Button.Content>
                                    <TextBlock Text="?" Foreground="LightGray" FontWeight="Bold"/>
                                </Button.Content>
                            </Button>

                            <!-- Mode Toggle -->
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,10" Spacing="10">
                                <TextBlock Text="Mode:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="ModeComboBox" Width="150" SelectedIndex="0">
                                    <ComboBoxItem Content="Text to Image"/>
                                    <ComboBoxItem Content="Image to Image"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Steps Slider -->
                            <Grid Margin="0,5,0,0" ColumnDefinitions="Auto,*,Auto">
                                <TextBlock Text="Steps:" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,10,0"/>
                                <Slider x:Name="StepsSlider" Minimum="1" Maximum="150" Value="20" Grid.Column="1" />
                                <TextBlock x:Name="StepsValueText" Text="20" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="2"/>
                            </Grid>

                            <!-- Scale Slider -->
                            <Grid Margin="0,5,0,0" ColumnDefinitions="Auto,*,Auto">
                                <TextBlock Text="Scale:" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,10,0"/>
                                <Slider x:Name="ScaleSlider" Minimum="1" Maximum="30" Value="7.5" Grid.Column="1" />
                                <TextBlock x:Name="ScaleValueText" Text="7.5" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="2"/>
                            </Grid>

                            <!-- Batch Size Slider -->
                            <Grid Margin="0,5,0,0" ColumnDefinitions="Auto,*,Auto">
                                <TextBlock Text="# of Images:" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,10,0"/>
                                <Slider x:Name="BatchSlider" Minimum="1" Maximum="8" Value="1" Grid.Column="1"/>
                                <TextBlock x:Name="BatchValueText" Text="1" Margin="10,0,0,0" VerticalAlignment="Center" Grid.Column="2"/>
                            </Grid>
                            
                            <!-- Image2Image Controls -->
                            <StackPanel x:Name="Image2ImageControls" IsVisible="False" Margin="0,10,0,0" Spacing="8">
                                <TextBlock Text="Image2Image Settings" FontWeight="Bold"/>
                                <Button Grid.Column="1" HorizontalAlignment="Right" Background="Transparent" 
                                        BorderThickness="0" Width="25" Height="30" Margin="0,0,5,0"
                                        Click="ShowImage2ImageTips">
                                    <Button.Content>
                                        <TextBlock Text="?" Foreground="LightGray" FontWeight="Bold"/>
                                    </Button.Content>
                                </Button>
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Button x:Name="LoadInitImageButton" Content="Load Initial Image"/>
                                    <Button x:Name="UseCurrentImageButton" Content="Use Current Image" IsEnabled="False"/>
                                    <Image x:Name="InitImagePreview" Width="100" Height="100"
                                           Stretch="Uniform" Margin="5"/>
                                </StackPanel>

                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <TextBlock Text="Strength:" VerticalAlignment="Center" Grid.Column="0"/>
                                    <Slider x:Name="StrengthSlider" Minimum="0" Maximum="1" Value="0.75" Grid.Column="1"/>
                                    <TextBlock x:Name="StrengthValueText" Text="0.75" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </Grid>
                            </StackPanel>

                            <Expander Header="Advanced options" Background="#1a1a1a" CornerRadius="6" Padding="10" BorderBrush="#333" BorderThickness="1">
                                <StackPanel Spacing="10">
                                    <!-- Highres Fix -->
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="Highres Fix" FontWeight="Bold"/>
                                        <CheckBox x:Name="EnableHrCheckbox" Content="Enable Highres Fix"/>
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="Upscaler:" VerticalAlignment="Center"/>
                                            <ComboBox x:Name="HrUpscalerComboBox" Width="180"/>
                                            <TextBlock Text="Scale:" VerticalAlignment="Center"/>
                                            <TextBox x:Name="HrScaleTextBox" Width="60" Watermark="1.5"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- FreeU -->
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="FreeU" FontWeight="Bold"/>
                                        <CheckBox x:Name="FreeUEnabledCheckbox" Content="Enable FreeU"/>
                                        <Grid ColumnDefinitions="Auto,*,Auto,*,Auto,*,Auto,*,Auto,*,Auto,*,Auto,*,Auto,*,Auto" RowDefinitions="Auto,Auto" >
                                            <TextBlock Grid.Column="0" Text="B1:" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" x:Name="FreeUB1TextBox" Width="60" Text="1.01"/>
                                            <TextBlock Grid.Column="2" Text="B2:" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="3" x:Name="FreeUB2TextBox" Width="60" Text="1.02"/>
                                            <TextBlock Grid.Column="4" Text="S1:" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="5" x:Name="FreeUS1TextBox" Width="60" Text="0.99"/>
                                            <TextBlock Grid.Column="6" Text="S2:" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="7" x:Name="FreeUS2TextBox" Width="60" Text="0.95"/>
                                            <TextBlock Grid.Column="8" Text="Start:" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="9" x:Name="FreeUStartTextBox" Width="60" Text="0.0"/>
                                            <TextBlock Grid.Column="10" Text="End:" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="11" x:Name="FreeUEndTextBox" Width="60" Text="1.0"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Dynamic Thresholding (CFG-Fix) -->
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="Dynamic Thresholding (CFG-Fix)" FontWeight="Bold"/>
                                        <CheckBox x:Name="DynThresEnabledCheckbox" Content="Enable Dynamic Thresholding"/>
                                        <Grid ColumnDefinitions="Auto,*,Auto,*,Auto,*,Auto,*,Auto,*,Auto,*,Auto,*,Auto,*,Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Mimic Scale:" VerticalAlignment="Center"/>
                                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="DynThresMimicScaleTextBox" Width="60" Text="7.0"/>
                                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Threshold %:" VerticalAlignment="Center"/>
                                            <TextBox Grid.Row="0" Grid.Column="3" x:Name="DynThresThresholdPctTextBox" Width="60" Text="1.0"/>
                                            <TextBlock Grid.Row="0" Grid.Column="4" Text="Mimic Mode:" VerticalAlignment="Center"/>
                                            <ComboBox Grid.Row="0" Grid.Column="5" x:Name="DynThresMimicModeCombo" Width="150">
                                                <ComboBoxItem Content="Constant"/>
                                                <ComboBoxItem Content="Linear Down"/>
                                                <ComboBoxItem Content="Cosine Down"/>
                                                <ComboBoxItem Content="Half Cosine Down"/>
                                                <ComboBoxItem Content="Linear Up"/>
                                                <ComboBoxItem Content="Cosine Up"/>
                                                <ComboBoxItem Content="Half Cosine Up"/>
                                                <ComboBoxItem Content="Power Up"/>
                                                <ComboBoxItem Content="Power Down"/>
                                                <ComboBoxItem Content="Linear Repeating"/>
                                                <ComboBoxItem Content="Cosine Repeating"/>
                                                <ComboBoxItem Content="Sawtooth"/>
                                            </ComboBox>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Mimic Scale Min:" VerticalAlignment="Center"/>
                                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="DynThresMimicScaleMinTextBox" Width="60" Text="0.0"/>
                                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Cfg Mode:" VerticalAlignment="Center"/>
                                            <ComboBox Grid.Row="1" Grid.Column="3" x:Name="DynThresCfgModeCombo" Width="150">
                                                <ComboBoxItem Content="Constant"/>
                                                <ComboBoxItem Content="Linear Down"/>
                                                <ComboBoxItem Content="Cosine Down"/>
                                                <ComboBoxItem Content="Half Cosine Down"/>
                                                <ComboBoxItem Content="Linear Up"/>
                                                <ComboBoxItem Content="Cosine Up"/>
                                                <ComboBoxItem Content="Half Cosine Up"/>
                                                <ComboBoxItem Content="Power Up"/>
                                                <ComboBoxItem Content="Power Down"/>
                                                <ComboBoxItem Content="Linear Repeating"/>
                                                <ComboBoxItem Content="Cosine Repeating"/>
                                                <ComboBoxItem Content="Sawtooth"/>
                                            </ComboBox>
                                            <TextBlock Grid.Row="1" Grid.Column="4" Text="Cfg Scale Min:" VerticalAlignment="Center"/>
                                            <TextBox Grid.Row="1" Grid.Column="5" x:Name="DynThresCfgScaleMinTextBox" Width="60" Text="0.0"/>
                                            <TextBlock Grid.Row="1" Grid.Column="6" Text="Sched Val:" VerticalAlignment="Center"/>
                                            <TextBox Grid.Row="1" Grid.Column="7" x:Name="DynThresSchedValTextBox" Width="60" Text="1.0"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Separate Channels:" VerticalAlignment="Center"/>
                                            <ComboBox Grid.Row="2" Grid.Column="1" x:Name="DynThresSeparateChannelsCombo" Width="120">
                                                <ComboBoxItem Content="enable"/>
                                                <ComboBoxItem Content="disable"/>
                                            </ComboBox>
                                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Startpoint:" VerticalAlignment="Center"/>
                                            <ComboBox Grid.Row="2" Grid.Column="3" x:Name="DynThresStartpointCombo" Width="120">
                                                <ComboBoxItem Content="MEAN"/>
                                                <ComboBoxItem Content="ZERO"/>
                                            </ComboBox>
                                            <TextBlock Grid.Row="2" Grid.Column="4" Text="Variability:" VerticalAlignment="Center"/>
                                            <ComboBox Grid.Row="2" Grid.Column="5" x:Name="DynThresVariabilityCombo" Width="120">
                                                <ComboBoxItem Content="AD"/>
                                                <ComboBoxItem Content="STD"/>
                                            </ComboBox>
                                            <TextBlock Grid.Row="2" Grid.Column="6" Text="Interpolate Phi:" VerticalAlignment="Center"/>
                                            <TextBox Grid.Row="2" Grid.Column="7" x:Name="DynThresPhiTextBox" Width="60" Text="1.0"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Expander>

                        </StackPanel>
                    </Border>

                    <!-- Configuration -->
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Configuration" FontWeight="Bold"/>
                            <Button Grid.Column="1" HorizontalAlignment="Right" Background="Transparent" 
                                    BorderThickness="0" Width="25" Height="30" Margin="0,0,5,0"
                                    Click="ShowConfigurationTips">
                                <Button.Content>
                                    <TextBlock Text="?" Foreground="LightGray" FontWeight="Bold"/>
                                </Button.Content>
                            </Button>
                            <ComboBox x:Name="ModelComboBox" PlaceholderText="Choose Model" Margin="0,5,0,0"/>
                            <ComboBox x:Name="SamplerComboBox" PlaceholderText="Choose Sampler" Margin="0,5,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBox x:Name="WidthTextBox" Width="50" Watermark="Width"/>
                                <TextBox x:Name="HeightTextBox" Width="50" Watermark="Height" Margin="5,0,0,0"/>
                                <TextBox x:Name="SeedTextBox" Width="100" Watermark="Seed" Margin="5,0,0,0" ToolTip.Tip="Leave blank or -1 for random seed"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Progress -->
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10">
                        <StackPanel>
                            <Button x:Name="GenerateButton" Content="Generate" Background="DarkGray" Foreground="White" Margin="0,10,0,0" HorizontalAlignment="Stretch"/>
                            <Button x:Name="SaveButton" Content="Save" Background="DarkGray" Foreground="White" Margin="0,5,0,0" HorizontalAlignment="Stretch" IsEnabled="False"/>
                        </StackPanel>
                    </Border>

                    <Expander Header="Last Generation Info" Background="#1a1a1a" CornerRadius="6" Padding="10" BorderBrush="#333" BorderThickness="1">
                        <StackPanel Spacing="5">
                            <TextBlock x:Name="InfoPromptText" FontSize="12" Foreground="#ccc"/>
                            <TextBlock x:Name="InfoNegativePromptText" FontSize="12" Foreground="#ccc"/>
                            <TextBlock x:Name="InfoStepsText" FontSize="12" Foreground="#ccc"/>
                            <TextBlock x:Name="InfoSamplerText" FontSize="12" Foreground="#ccc"/>
                            <TextBlock x:Name="InfoSeedText" FontSize="12" Foreground="#ccc"/>
                            <TextBlock x:Name="InfoSizeText" FontSize="12" Foreground="#ccc"/>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>

            <!-- Image Display Section -->
            <Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="10">
                <Grid Background="#111">

                    <Image x:Name="ResultImage"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                    <StackPanel x:Name="ProgressOverlay" HorizontalAlignment="Center" VerticalAlignment="Center" IsVisible="False">
                        <ProgressBar x:Name="LoadingBar" Minimum="0" Maximum="100" Height="20" HorizontalAlignment="Stretch"/>
                        <TextBlock x:Name="ProgressText" Text="" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel x:Name="ImageNavPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,60,0,10" Spacing="10" IsVisible="False">
                        <Button x:Name="PrevImageButton" Content="←" Width="30"/>
                        <TextBlock x:Name="ImageIndexLabel" Text="Image 1 of 1" Foreground="LightGreen" VerticalAlignment="Center" FontWeight="Bold"/>
                        <Button x:Name="NextImageButton" Content="→" Width="30"/>
                    </StackPanel>

                    <TextBlock x:Name="StatusText"
                               Text="No image generated yet"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="0,10,0,10"/>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
    
</UserControl>
