<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:myApp"
        x:Class="myApp.MainWindow"
        Title="Stable Diffusion UI"
        Width="900" Height="600"
        Background="#111">

    <Window.Styles>
    <!-- Sidebar Button -->
    <Style Selector="Button.SideMenuButton">
        <Setter Property="Background" Value="#1d1d1d"/>
        <Setter Property="Foreground" Value="#eaeaea"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="14 12"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Margin" Value="0,6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Opacity" Value="0.92"/>

        <!-- Supported transitions in Avalonia 11 -->
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.1"/>
                <ThicknessTransition Property="Margin" Duration="0:0:0.08"/>
            </Transitions>
        </Setter>
    </Style>

    <!-- Hover -->
    <Style Selector="Button.SideMenuButton:pointerover">
        <Setter Property="Background" Value="#2a2a2a"/>
        <Setter Property="Opacity" Value="1"/>
    </Style>

    <!-- Press -->
    <Style Selector="Button.SideMenuButton:pressed">
        <!-- Subtle inset press effect -->
        <Setter Property="Margin" Value="2,8,0,4"/>
        <Setter Property="Background" Value="#333"/>
    </Style>

    <!-- Left accent bar -->
    <Style Selector="Button.SideMenuButton:pointerover ContentPresenter">
        <Setter Property="BorderThickness" Value="4 0 0 0"/>
        <Setter Property="BorderBrush" Value="#4aa3ff"/>
    </Style>
</Window.Styles>




    <DockPanel>
        <!-- Top Bar -->
        <Border Background="#222" Height="50" DockPanel.Dock="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="MenuToggleButton"
                        Width="40"
                        Height="40"
                        Margin="5"
                        Click="MenuToggleButton_Click"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center">
                    <StackPanel Spacing="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Rectangle Height="3" Width="20" Fill="LightGray"/>
                        <Rectangle Height="3" Width="20" Fill="LightGray"/>
                        <Rectangle Height="3" Width="20" Fill="LightGray"/>
                    </StackPanel>
                </Button>


                <TextBlock Grid.Column="1" Text="Stable Diffusion UI" Foreground="{DynamicResource SystemAccentColor}"
                           FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                <Button Grid.Column="2"
                        Width="60"
                        Height="40"
                        Margin="0,0,10,0"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        VerticalAlignment="Center"
                        Click="ShowIntro_Click">
                    <TextBlock Text="Intro"
                               Foreground="LightGray"
                               FontWeight="Bold"
                               Margin="0,-2,0,0"/>
                </Button>

            </Grid>
        </Border>

        <!-- Body -->
        <Grid>

            <ContentControl x:Name="MainContent" Background="#111"/>

            <!-- Side Menu -->
            <Border x:Name="SideMenu" Background="#1c1c1c" Width="200" HorizontalAlignment="Left" IsVisible="False">
                <StackPanel Margin="12">

                    <Button Classes="SideMenuButton" Content="Dashboard" Click="ShowDashboard_Click"/>
                    <Button Classes="SideMenuButton" Content="Models" Click="ShowModels_Click"/>
                    <Button Classes="SideMenuButton" Content="Gallery" Click="ShowGallery_Click"/>
                    <Button Classes="SideMenuButton" Content="Settings" Click="ShowSettings_Click"/>

                </StackPanel>
            </Border>

        </Grid>
    </DockPanel>
</Window>
