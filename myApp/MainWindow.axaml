<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="myApp.MainWindow"
        Title="Stable Diffusion Image Generator"
        MinWidth="800"
        MinHeight="600">

    <DockPanel>
        <!-- Top Navigation Bar -->
        <Border Background="#222" Height="50" DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Stable Diffusion UI" Foreground="LightGreen" FontSize="18" FontWeight="Bold" Margin="10"/>
                <Button Content="Dashboard" Name="DashboardButton" Background="Transparent" Foreground="White" Margin="10,0"/>
                <Button Content="Models" Name="ModelsButton" Background="Transparent" Foreground="White" Margin="10,0"/>
                <Button Content="Gallery" Name="GalleryButton" Background="Transparent" Foreground="White" Margin="10,0"/>
                <Button Content="Settings" Name="SettingsButton" Background="Transparent" Foreground="White" Margin="10,0"/>
            </StackPanel>
        </Border>

        <ContentControl x:Name="MainContent"/>
        
    </DockPanel>
</Window>